<% content_for :head do %>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>题目管理</title>
    <meta name="description" content="">
    <meta name="author" content="templatemo">
<% end %>

<body>
<!-- Left column -->
<div class="templatemo-flex-row">
  <div class="templatemo-sidebar">
    <header class="templatemo-site-header">
      <h1><%= @teacher.user.name %>&nbsp;老师好！</h1>
    </header>
    <div class="mobile-menu-icon">
      <i class="fa fa-bars"></i>
    </div>
    <nav class="templatemo-left-nav">
      <ul>
        <li><a href="<%= index_path %>"><i class="fa fa-home fa-fw"></i>课程管理</a></li>
        <li><a href="<%= teachers_exercise_path %>" class="active"><i class="fa fa-sliders fa-fw"></i>题目管理</a></li>
        <li><a href="<%= index_logout_path %>"><i class="fa fa-eject fa-fw"></i>退出</a></li>
      </ul>
    </nav>
  </div>
  <!-- Main content -->
  <div class="templatemo-content col-1 light-gray-bg">
    <div class="templatemo-content-container">
      <div class="templatemo-content-widget no-padding">
        <div class="panel panel-default table-responsive">
          <table class="table table-striped table-bordered templatemo-user-table">
            <thead>
            <tr>
              <td><a href="" class="white-text templatemo-sort-by">练习编号<span class="caret"></span></a></td>
              <td><a href="" class="white-text templatemo-sort-by">练习名<span class="caret"></span></a></td>
              <td><a href="" class="white-text templatemo-sort-by">所属课程<span class="caret"></span></a></td>
              <td><a href="" class="white-text templatemo-sort-by">时长(分钟)<span class="caret"></span></a></td>
              <td><a href="" class="white-text templatemo-sort-by">平均分<span class="caret"></span></a></td>
              <td><a href="" class="white-text templatemo-sort-by">最高分<span class="caret"></span></a></td>
              <td><a href="" class="white-text templatemo-sort-by">最低分<span class="caret"></span></a></td>
              <td>发布</td>
              <td>查看报告</td>
              <td>删除</td>
            </tr>
            </thead>
            <tbody>
            <% for quiz in @quizs %>
            <tr>
              <td><%= quiz.__id__ %></td>
              <td><%= quiz.title %></td>
              <td><%= quiz.lesson.name %></td>
              <td><%= quiz.limitTime %></td>
              <td><%= quiz.average %></td>
              <td><%= quiz.highest %></td>
              <td><%= quiz.lowest %></td>
              <td><a href="" class="templatemo-edit-btn">发布</a></td>
              <td><a href="report.html" class="templatemo-edit-btn">查看</a></td>
              <td><a href="" class="templatemo-edit-btn">删除</a></td>
            </tr>
            <% end %>
            </tbody>
          </table>
        </div>
        <div class="form-group text-left">
          <button class="templatemo-blue-button" id="add_exercise" data-toggle="modal" data-target="#exercise">添加练习</button>
          <button class="templatemo-blue-button" id="add_quiz" data-toggle="modal" data-target="#quiz">添加题目</button>
          <!-- 模态框（Modal） -->
          <div class="modal fade" id="exercise" tabindex="-1" role="dialog"
               aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close"
                          data-dismiss="modal" aria-hidden="true">
                    &times;
                  </button>
                  <h4 class="modal-title" id="myModalLabel">
                    添加练习
                  </h4>
                </div>
                <form action="add_exercise" class="templatemo-login-form" method="post" enctype="multipart/form-data">
                  <div class="col-lg-12 has-success form-group">
                    <label class="control-label" >练习编号</label>
                    <input type="text" class="form-control" id="ex_id">
                  </div>
                  <div class="col-lg-12 has-success form-group">
                    <label class="control-label" >练习名</label>
                    <input type="text" class="form-control" id="ex_name">
                  </div>
                  <div class="col-lg-12 has-success form-group">
                    <label class="control-label" >所属科目</label>
                    <input type="text" class="form-control" id="belong_to">
                  </div>
                  <div class="col-lg-12 has-success form-group">
                    <label class="control-label" >时长(分钟)</label>
                    <input type="text" class="form-control" id="time">
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-default"
                            data-dismiss="modal">关闭
                    </button>
                    <button type="button" class="btn btn-primary">
                      提交
                    </button>
                  </div>
                </form>
              </div><!-- /.modal-content -->
            </div><!-- /.modal -->
          </div>
        </div>
      </div>
      <div class="pagination-wrap">
        <ul class="pagination">
          <li><a href="#">1</a></li>
          <li><a href="#">2</a></li>
          <li class="active"><a href="#">3 <span class="sr-only">(current)</span></a></li>
          <li><a href="#">4</a></li>
          <li><a href="#">5</a></li>
          <li>
            <a href="#" aria-label="Next">
              <span aria-hidden="true"><i class="fa fa-play"></i></span>
            </a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
