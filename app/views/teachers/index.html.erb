<% content_for :head do %>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>课程管理</title>
    <meta name="description" content="">
    <meta name="author" content="templatemo">

    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,400italic,700' rel='stylesheet' type='text/css'>
    <link href="css/font-awesome.min.css" rel="stylesheet">
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link href="css/templatemo-style.css" rel="stylesheet">
<% end %>

<body>
<!-- Left column -->
<div class="templatemo-flex-row">
  <div class="templatemo-sidebar">
    <header class="templatemo-site-header">
      <h1>&nbsp;&nbsp;&nbsp;X老师好！</h1>
    </header>
    <div class="mobile-menu-icon">
      <i class="fa fa-bars"></i>
    </div>
    <nav class="templatemo-left-nav">
      <ul>
        <li><a href="#" class="active"><i class="fa fa-home fa-fw"></i>课程管理</a></li>
        <li><a href="que_entry.html"><i class="fa fa-sliders fa-fw"></i>题目管理</a></li>
        <li><a href="login.html"><i class="fa fa-eject fa-fw"></i>退出</a></li>
      </ul>
    </nav>
  </div>
  <!-- Main content -->
  <div class="templatemo-content col-1 light-gray-bg">

    <div class="templatemo-content-container">
      <div class="templatemo-content-widget no-padding">
        <div class="panel panel-default table-responsive">
          <table class="table table-striped table-bordered templatemo-user-table">
            <thead>
            <tr>
              <td>课程编号</td>
              <td>课程名</td>
              <td>教师</td>
              <td>查看练习</td>
              <td>删除课程</td>
            </tr>
            </thead>
            <tbody>
            <% for lesson in @teacher.lessons %>
            <tr>
              <td><%= lesson.lessonNo %></td>
              <td><%= lesson.name %></td>
              <td><%= @teacher.user.name %></td>
              <td><a href="que_entry.html" class="templatemo-edit-btn">查看</a></td>
              <td><a href="que_entry.html" class="templatemo-edit-btn">删除</a></td>
            </tr>
            <% end %>
            </tbody>
          </table>
        </div>
        <div class="form-group text-left">
          <button class="templatemo-blue-button" id="add_class" data-toggle="modal" data-target="#myModal">添加课程</button>

          <!-- 模态框（Modal） -->
          <div class="modal fade" id="myModal" tabindex="-1" role="dialog"
               aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close"
                          data-dismiss="modal" aria-hidden="true">
                    &times;
                  </button>
                  <h4 class="modal-title" id="myModalLabel">
                    添加课程
                  </h4>
                </div>
                <form action="add_class" class="templatemo-login-form" method="post" enctype="multipart/form-data">
                <div class="col-lg-12 has-success form-group">
                  <label class="control-label" >课程编号</label>
                  <input type="text" class="form-control" id="class_id">
                </div>
                <div class="col-lg-12 has-success form-group">
                  <label class="control-label" >课程名</label>
                  <input type="text" class="form-control" id="class_name">
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-default"
                          data-dismiss="modal">关闭
                  </button>
                  <button type="button" class="btn btn-primary">
                    提交
                  </button>
                </div>
                </form>
              </div><!-- /.modal-content -->
            </div><!-- /.modal -->
          </div>
        </div>
        <div class="pagination-wrap">
          <ul class="pagination">
            <li><a href="#">1</a></li>
            <li><a href="#">2</a></li>
            <li class="active"><a href="#">3 <span class="sr-only">(current)</span></a></li>
            <li><a href="#">4</a></li>
            <li><a href="#">5</a></li>
            <li>
              <a href="#" aria-label="Next">
                <span aria-hidden="true"><i class="fa fa-play"></i></span>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>