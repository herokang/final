<% content_for :head do %>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>学生在线答题</title>

    <%= javascript_include_tag "http://fonts.googleapis.com/css?family=Open+Sans:400,300,400italic,700"%>
    <!--link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,400italic,700' rel='stylesheet' type='text/css'-->
    <%= javascript_include_tag "https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js", "https://oss.maxcdn.com/respond/1.4.2/respond.min.js" %>
    <%=javascript_include_tag "jquery-1.11.2.min.js","templatemo-script","bootstrap-filestyle.min"%>
    <%= stylesheet_link_tag "templatemo-style","font-awesome","bootstrap" %>

<% end %>

<body>
<!-- Left column -->
<div class="templatemo-flex-row">
  <div class="templatemo-sidebar">
    <header class="templatemo-site-header">
      <div class="square"></div>
      <h1>Trustie</h1>
    </header>
    <div class="profile-photo-container">
      <%= image_tag "profile-photo.jpg", alt: "Profile Photo",class: "img-responsive" %>
      <div class="profile-photo-overlay"></div>
    </div>
    <!-- Search box -->
    <form class="templatemo-search-form" role="search">
      <div class="input-group">
        <button type="submit" class="fa fa-search"></button>
        <input type="text" class="form-control" placeholder="Search" name="srch-term" id="srch-term">
      </div>
    </form>
    <div class="mobile-menu-icon">
      <i class="fa fa-bars"></i>
    </div>
    <nav class="templatemo-left-nav">
      <ul>
        <li><a href="index.html"><i class="fa fa-home fa-fw"></i>课程</a></li>
        <li><a href="data-visualization.html"><i class="fa fa-bar-chart fa-fw"></i>作业</a></li>
        <li><a href="login.html"><i class="fa fa-eject fa-fw"></i>退出</a></li>
      </ul>
    </nav>
  </div>
  <!-- Main content -->
  <div class="templatemo-content col-1 light-gray-bg">
    <div class="templatemo-top-nav-container">
      <div class="row">
        <nav class="templatemo-top-nav col-lg-12 col-md-12">
          <ul class="text-uppercase">
            <li><a href="" class="active">课程</a></li>
            <li><a href="">作业</a></li>
          </ul>
        </nav>
      </div>
    </div>
    <div class="templatemo-content-container">
      <div class="templatemo-content-widget white-bg">
        <h2 class="margin-bottom-10">在线答题</h2>
        <form action="index.html" class="templatemo-login-form" method="post" enctype="multipart/form-data">

          <div class="templatemo-content-widget white-bg col-1">
            <h3 class="text-uppercase">时间进度</h3>
            <hr>
            <div class="progress">
              <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;"></div>
            </div>
          </div>


          <div class="row form-group">
            <div class="col-lg-12 has-success form-group">
              <label class="control-label" for="inputWithSuccess">1.welcome to Ruby on Rails,the question is that?</label>
            </div>
            <div class="col-lg-12 form-group">
              <div class="margin-right-15 templatemo-inline-block">
                <input type="checkbox" name="server" id="c1" value="" checked>
                <label for="c1" class="font-weight-400"><span></span>Server Status</label>
              </div>
              <div class="margin-right-15 templatemo-inline-block">
                <input type="checkbox" name="member" id="c2" value="">
                <label for="c2" class="font-weight-400"><span></span>Member Status</label>
              </div>
              <div class="margin-right-15 templatemo-inline-block">
                <input type="checkbox" name="expired" id="c3" value="">
                <label for="c3" class="font-weight-400"><span></span>Expired Members</label>
              </div>
            </div>
          </div>

          <div class="row form-group">
            <div class="col-lg-12 has-success form-group">
              <label class="control-label" for="inputWithSuccess">2.welcome to Ruby on Rails,the question is that?</label>
            </div>
            <div class="col-lg-6 col-md-6 form-group">
              <div>
                <div class="templatemo-block margin-bottom-5">
                  <input type="radio" name="emailOptions" id="r1" value="html" checked>
                  <label for="r1" class="font-weight-400"><span></span>A HTML Format</label>
                </div>
                <div class="templatemo-block margin-bottom-5">
                  <input type="radio" name="emailOptions" id="r2" value="plain">
                  <label for="r2" class="font-weight-400"><span></span>B Plain Text</label>
                </div>
                <div class="templatemo-block margin-bottom-5">
                  <input type="radio" name="emailOptions" id="r3" value="rich">
                  <label for="r3" class="font-weight-400"><span></span>C Rich Text</label>
                </div>
                <div class="templatemo-block margin-bottom-5">
                  <input type="radio" name="emailOptions" id="r4" value="D">
                  <label for="r4" class="font-weight-400"><span></span>D Rich Text</label>
                </div>
              </div>
            </div>
          </div>

          <div class="row form-group">
            <div class="col-lg-12 has-success form-group">
              <label class="control-label" for="inputWithSuccess">3.welcome to Ruby on Rails,the question is that?</label>
            </div>
            <div class="col-lg-12 form-group">
              <div class="margin-right-15 templatemo-inline-block">
                <input type="radio" name="radio" id="r5" value="" checked>
                <label for="r5" class="font-weight-400"><span></span>True</label>
              </div>
              <div class="margin-right-15 templatemo-inline-block">
                <input type="radio" name="radio" id="r6" value="" >
                <label for="r6" class="font-weight-400"><span></span>False</label>
              </div>
            </div>
          </div>

          <div class="form-group text-right">
            <button type="submit" class="templatemo-blue-button">Update</button>
          </div>
        </form>
      </div>
      <footer class="text-right">
        <p>Copyright &copy; 2084 Company Name
          | Designed by <a href="http://www.templatemo.com" target="_parent">templatemo</a></p>
      </footer>
    </div>
  </div>
</div>

</body>

