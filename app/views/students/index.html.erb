<% content_for :head do %>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>学生课程管理</title>

    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,400italic,700' rel='stylesheet' type='text/css'>
    <!--link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,400italic,700' rel='stylesheet' type='text/css'-->
    <%= javascript_include_tag "https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js", "https://oss.maxcdn.com/respond/1.4.2/respond.min.js" %>

<% end %>


<body>
<!-- Left column -->
<div class="templatemo-flex-row">
  <div class="templatemo-sidebar">
    <header class="templatemo-site-header">
      <div class="square"></div>
      <h1>源题库</h1>
    </header>
    <div class="mobile-menu-icon">
      <i class="fa fa-bars"></i>
    </div>
    <nav class="templatemo-left-nav">
      <ul>
        <li><a href="<%= index_url %>" class="active"><i class="fa fa-home fa-fw"></i>课程</a></li>
        <li><a href="<%= students_homeworks_path %>"><i class="fa fa-bar-chart fa-fw"></i>作业</a></li>
        <li><a href="<%= index_logout_path %>"><i class="fa fa-eject fa-fw"></i>退出</a></li>
      </ul>
    </nav>
  </div>
  <!-- Main content -->
  <div class="templatemo-content col-1 light-gray-bg">
    <div class="templatemo-content-container">
      <div class="templatemo-content-widget no-padding">
        <div class="panel panel-default table-responsive">
          <table class="table table-striped table-bordered templatemo-user-table">
            <thead>
            <tr>
              <td><a class="white-text templatemo-sort-by">课程编号<span class="caret"></span></a></td>
              <td><a class="white-text templatemo-sort-by">课程名称 <span class="caret"></span></a></td>
              <td><a class="white-text templatemo-sort-by">老师 <span class="caret"></span></a></td>
              <td style="min-width: 93px;"><a class="white-text templatemo-sort-by">查看作业 <span class="caret"></span></a></td>
            </tr>
            </thead>
            <tbody>
            <% for lesson in @student.lessons %>
            <tr>
              <td><%= lesson.lessonNo %></td>
              <td><%= lesson.name %></td>
              <td><%= lesson.teacher.user.name %></td>
              <td><a href="<%= students_homeworks_path %>?leesonId=<%= lesson.id %>" class="templatemo-edit-btn">作业情况</a></td>
            </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <br>
      <div class="text-right">
        <a href="<%= students_alllessons_path %>" class="templatemo-blue-button">添加课程</a>
      </div>
    </div>
  </div>
</div>
</body>
</html>