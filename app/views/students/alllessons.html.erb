<% content_for :head do %>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>学生课程管理</title>

    <%= javascript_include_tag "http://fonts.googleapis.com/css?family=Open+Sans:400,300,400italic,700"%>
    <!--link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,400italic,700' rel='stylesheet' type='text/css'-->
    <%= javascript_include_tag "https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js", "https://oss.maxcdn.com/respond/1.4.2/respond.min.js" %>
    <%=javascript_include_tag "jquery-1.11.2.min.js","templatemo-script","bootstrap-filestyle.min"%>
    <%= stylesheet_link_tag "templatemo-style" %>

<% end %>


<body>
<!-- Left column -->
<div class="templatemo-flex-row">
  <div class="templatemo-sidebar">
    <header class="templatemo-site-header">
      <div class="square"></div>
      <h1>源题库</h1>
    </header>
    <div class="mobile-menu-icon">
      <i class="fa fa-bars"></i>
    </div>
    <nav class="templatemo-left-nav">
      <ul>
        <li><a href="index.html" class="active"><i class="fa fa-home fa-fw"></i>课程</a></li>
        <li><a href="data-visualization.html"><i class="fa fa-bar-chart fa-fw"></i>作业</a></li>
        <li><a href="login.html"><i class="fa fa-eject fa-fw"></i>退出</a></li>
      </ul>
    </nav>
  </div>
  <!-- Main content -->
  <div class="templatemo-content col-1 light-gray-bg">
    <div class="templatemo-content-container">
      <div class="templatemo-content-widget no-padding">
        <div class="panel panel-default table-responsive">
          <table class="table table-striped table-bordered templatemo-user-table">
            <thead>
            <tr>
              <td><a href="" class="white-text templatemo-sort-by">课程编号<span class="caret"></span></a></td>
              <td><a href="" class="white-text templatemo-sort-by">课程名称 <span class="caret"></span></a></td>
              <td><a href="" class="white-text templatemo-sort-by">老师 <span class="caret"></span></a></td>
              <td><a href="" class="white-text templatemo-sort-by">操作 <span class="caret"></span></a></td>
            </tr>
            </thead>
            <tbody>
            <% for lesson in @lessons %>
                <tr>
                  <td><%= lesson.lessonNo %></td>
                  <td>软件工程</td>
                  <td>魏峻</td>
                  <% if lesson.isAttend(@student) %>
                      <td><div class="templatemo-edit-btn">已选</div></td>
                  <% else %>
                      <td><a href="<%= students_attend_path %>?lessonId=<%= lesson.id %>" class="templatemo-edit-btn">选择该课程</a></td>
                  <% end %>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>