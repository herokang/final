<% content_for :head do %>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>学生作业管理</title>
<% end %>

<body>
<!-- Left column -->
<div class="templatemo-flex-row">
  <div class="templatemo-sidebar">
    <header class="templatemo-site-header">
      <div class="square"></div>
      <h1>源题库</h1>
    </header>

    <!-- Search box -->

    <div class="mobile-menu-icon">
      <i class="fa fa-bars"></i>
    </div>
    <nav class="templatemo-left-nav">
      <ul>
        <li><a href="<%= index_url %>"><i class="fa fa-home fa-fw"></i>课程</a></li>
        <li><a href="<%= students_homeworks_path %>" class="active"><i class="fa fa-bar-chart fa-fw"></i>作业</a></li>
        <li><a href="<%= index_logout_path %>"><i class="fa fa-eject fa-fw"></i>退出</a></li>
      </ul>
    </nav>
  </div>
  <!-- Main content -->
  <div class="templatemo-content col-1 light-gray-bg">
    <div class="templatemo-content-container">
      <div class="templatemo-content-widget no-padding">
        <div class="panel panel-default table-responsive">
          <table class="table table-striped table-bordered templatemo-user-table">
            <thead>
            <tr>
              <td><a href="" class="white-text templatemo-sort-by">编号<span class="caret"></span></a></td>
              <td><a href="" class="white-text templatemo-sort-by">作业标题<span class="caret"></span></a></td>
              <td><a href="" class="white-text templatemo-sort-by">所属课程<span class="caret"></span></a></td>
              <td><a href="" class="white-text templatemo-sort-by">限时<span class="caret"></span></a></td>
              <td><a href="" class="white-text templatemo-sort-by">题数<span class="caret"></span></a></td>
              <td><a href="" class="white-text templatemo-sort-by">开始时间<span class="caret"></span></a></td>
              <td><a href="" class="white-text templatemo-sort-by">作业状态<span class="caret"></span></a></td>
              <td><a href="" class="white-text templatemo-sort-by">分数<span class="caret"></span></a></td>
            </tr>
            </thead>
            <tbody>
            <% for homework in @homeWorks %>
            <tr>
              <td><%= homework.quizId %></td>
              <td><%= homework.title %></td>
              <td><%= homework.quiz.lesson.name %></td>
              <td><%= homework.quiz.limitTime %>分钟</td>
              <td><%= homework.quiz.number %></td>
              <% if homework.start %>
                  <td><%= homework.start %></td>
                  <td><a href="" class="templatemo-edit-btn">查看</a></td>
                  <td><%= homework.grade %></td>
              <% else %>
                  <td>未开始</td>
                  <td><a href="<%= students_questions_path %>?id=<%= homework.id %>" class="templatemo-edit-btn">答题</a></td>
                  <td>未答题</td>
              <% end %>
            </tr>
            <% end %>
            <tr>
              <td>3.</td>
              <td>第三次作业</td>
              <td>第三次作业</td>
              <td>2016/01/10</td>
              <td>2</td><td>2</td>
              <td><a href="" class="templatemo-edit-btn">查看</a></td>
              <td>92</td>
            </tr>
            </tbody>
          </table>
        </div>
      </div>
      <!-- Second row ends -->
      <div class="pagination-wrap">
        <ul class="pagination">
          <li></li>
          <li></li>
          <li class="active"></li>
          <li></li>
          <li></li>
          <li></li>
        </ul>
      </div>

    </div>
  </div>
</div>
